<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEE">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:letterSpacing="0.03"
            android:text="تسجيل حساب"
            android:textColor="#0d6e6a"
            android:textSize="35dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Fullname"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/forget"
            android:hint="الاسم"
            android:paddingLeft="20dp"
            android:textColor="#0d6e6a"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/mail"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/forget"
            android:hint="البريد الالكتروني"
            android:paddingLeft="20dp"
            android:textColor="#0d6e6a"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="@+id/Fullname"
            app:layout_constraintStart_toStartOf="@+id/Fullname"
            app:layout_constraintTop_toBottomOf="@+id/Fullname"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="115dp"
            android:layout_height="48dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/green"
            android:text="انشاء حساب"
            android:textColor="#FFF"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gotosign" />

        <Button
            android:id="@+id/btnReturn"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/green"
            android:text="رجوع الى الصفحة الرئيسية"
            android:textColor="#FFF"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btnRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnRegister" />

        <TextView
            android:id="@+id/gotosign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="هل لديك حساب ؟ تسجيل الدخول"
            android:textColor="#0d6e6a"
            android:textSize="18dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pass" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/forget"
            android:ems="10"
            android:hint="اعادة كلمة السر"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textAlignment="textEnd"
            android:textColor="#0d6e6a"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/repass"
            app:layout_constraintStart_toStartOf="@+id/repass"
            app:layout_constraintTop_toBottomOf="@+id/repass" />

        <EditText
            android:id="@+id/repass"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/forget"
            android:ems="10"
            android:hint="كلمة السر"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textAlignment="textEnd"
            android:textColor="#0d6e6a"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/mail"
            app:layout_constraintStart_toStartOf="@+id/mail"
            app:layout_constraintTop_toBottomOf="@+id/mail" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>